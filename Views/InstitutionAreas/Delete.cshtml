@model ZaculeuValley.IxchelAdmin.Models.InstitutionArea

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar esta Área?</h3>
<div>
    <h4>Institución Área</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Código Área
            @*@Html.DisplayNameFor(model => model.AreaCode)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AreaCode)
        </dd>
        <dt class = "col-sm-2">
            Nombre Área
            @*@Html.DisplayNameFor(model => model.AreaName)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AreaName)
        </dd>
        <dt class = "col-sm-2">
            Hábilitado
            @*@Html.DisplayNameFor(model => model.Enabled)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Enabled)
        </dd>
        <dt class = "col-sm-2">
            Borrado
            @*@Html.DisplayNameFor(model => model.Deleted)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Deleted)
        </dd>
        <dt class = "col-sm-2">
            ID País
            @*@Html.DisplayNameFor(model => model.IdinstitutionCountryNavigation)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdinstitutionCountryNavigation.IdinstitutionCountry)
        </dd>
        <dt class = "col-sm-2">
            ID Intitución
            @*@Html.DisplayNameFor(model => model.IdinstitutionNavigation)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdinstitutionNavigation.Idinstitution)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdinstitutionArea" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar a Índice</a>
    </form>
</div>
