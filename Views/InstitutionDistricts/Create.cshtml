@model ZaculeuValley.IxchelAdmin.Models.InstitutionDistrict

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Distrito</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdinstitutionArea" class="control-label">Nombre Área</label>
                <select asp-for="IdinstitutionArea" class ="form-control" asp-items="ViewBag.IdinstitutionArea"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idinstitution" class="control-label">Nombre de la Institución</label>
                <select asp-for="Idinstitution" class ="form-control" asp-items="ViewBag.Idinstitution"></select>
            </div>
            <div class="form-group">
                <label asp-for="AreaCode" class="control-label">Área</label>
                <select asp-for="AreaCode" class="form-control" asp-items="ViewBag.IdinstitutionArea"></select>
                <span asp-validation-for="AreaCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistrictCode" class="control-label">Código Distrito</label>
                <input asp-for="DistrictCode" class="form-control" />
                <span asp-validation-for="DistrictCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DistrictName" class="control-label">Nombre del Distrito</label>
                <input asp-for="DistrictName" class="form-control" />
                <span asp-validation-for="DistrictName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Enabled" /> Hábilitado
                </label>
            </div>
            @*<div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Deleted" /> Borrado
                </label>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mb-5">
    <a asp-action="Index">Regresar a Índice</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
