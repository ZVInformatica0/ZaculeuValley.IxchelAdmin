@model ZaculeuValley.IxchelAdmin.Models.Facility

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>
<h2>Instalación</h2>

<div>
    @*<h4></h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Código
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacilityCode)
        </dd>
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacilityName)
        </dd>
        <dt class = "col-sm-2">
            Habilitado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Enabled)
        </dd>
        <dt class = "col-sm-2">
            Eliminado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Deleted)
        </dd>
        <dt class = "col-sm-2">
            Código Área
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AreaCode)
        </dd>
        <dt class = "col-sm-2">
            Código Distrito
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DistrictCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IddistrictNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IddistrictNavigation.IdinstitutionDistrict)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdfacilityTypeNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdfacilityTypeNavigation.IdfacilityType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdinstitutionNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdinstitutionNavigation.Idinstitution)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model?.Idfacility">Edit</a> |
    <a asp-action="Index">Regresar a Índice</a>
</div>
